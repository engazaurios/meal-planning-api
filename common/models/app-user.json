{
  "name": "AppUser",
  "plural": "AppUsers",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "scope": {
    "include": [
      "department",
      "roles"
    ]
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "birthday": {
      "type": "date",
      "required": false
    },
    "qrCode": {
      "type": "string",
      "required": false
    },
    "status": {
      "type": "string",
      "required": false
    },
    "photo": {
      "type": "string",
      "required": false
    }
  },
  "validations": [],
  "relations": {
    "department": {
      "type": "belongsTo",
      "model": "Department",
      "foreignKey": "departmentId",
      "options": {
        "nestRemoting": true
      }
    },
    "roles": {
      "type": "hasMany",
      "model": "Role",
      "foreignKey": "principalId",
      "through": "RoleMapping"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
